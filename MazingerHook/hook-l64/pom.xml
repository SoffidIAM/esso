<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.soffid.iam.esso.l64</groupId>
	<artifactId>libMazingerHook</artifactId>
	<packaging>so</packaging>	
	<name>Dll per a injecci√≥ d'Usuaris i Passwords (Linux 64 bits)</name>
	<parent>
		<artifactId>MazingerHook</artifactId>
		<groupId>com.soffid.iam.esso.pom</groupId>
		<version>1.5.0-1</version>
	</parent>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>native-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<compilerProvider>generic</compilerProvider>
					<compilerExecutable>g++</compilerExecutable>
					<linkerProvider>generic</linkerProvider>
					<linkerExecutable>g++</linkerExecutable>
					<compilerMiddleOptions>
						<compilerMiddleOptionx>-m64</compilerMiddleOptionx>
						<compilerMiddleOptionx>-fPIC</compilerMiddleOptionx>
						<compilerMiddleOption>-Wall</compilerMiddleOption>
						<compilerMiddleOption>-g3</compilerMiddleOption>
						<compilerMiddleOption>-O0</compilerMiddleOption>
						<compilerMiddleOption>-static-libgcc</compilerMiddleOption>
						<compilerMiddleOption>-fvisibility=hidden</compilerMiddleOption>
						<compilerMiddleOption>-fvisibility-inlines-hidden</compilerMiddleOption>
					</compilerMiddleOptions>
					<linkerMiddleOptions>
						<linkerMiddleOption>-m64</linkerMiddleOption>
						<linkerMiddleOption>-s</linkerMiddleOption>
						<linkerMiddleOption>-Wl,--exclude-libs=ALL</linkerMiddleOption>
						<linkerMiddleOption>-s</linkerMiddleOption>
						<linkerMiddleOptionx>-fPIC</linkerMiddleOptionx>
						<linkerMiddleOption>-shared</linkerMiddleOption>
					</linkerMiddleOptions>
					<linkerEndOptions>
						<linkerEndOption>-lpcreposix</linkerEndOption>
						<linkerEndOption>-lsee</linkerEndOption>
						<linkerEndOption>-lrt</linkerEndOption>
						<linkerEndOption>-lX11</linkerEndOption>
						<linkerEndOption>-lsoup-2.4</linkerEndOption>
						<linkerEndOption>-lglib-2.0</linkerEndOption>
						<linkerEndOption>-Wl,-Map=target/${pom.artifactId}-${pom.version}.mapfile.txt</linkerEndOption>
					</linkerEndOptions>
					<sources>
						<source>
							<!-- relative to your project directory -->
							<directory>../src/main/native</directory>
							<includes>
								<include>**/*.cpp</include>
							</includes>
							<excludes>
								<exclude>win/*.cpp</exclude>
								<exclude>**/*.h</exclude>
							</excludes>

							<deployable>false</deployable>
							<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
						</source>
						<!-- additional system include path -->
						<source>
							<directory>../src/main/include</directory>
							<deployable>true</deployable>
							<dependencyAnalysisParticipation>true</dependencyAnalysisParticipation>
						</source>
						<source>
							<directory>../src/main/include-deps</directory>
							<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
						</source>
					</sources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.soffid.iam.esso.l64</groupId>
			<artifactId>libmazinger-engine</artifactId>
			<version>${pom.version}</version>
			<type>a</type>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.l64</groupId>
			<artifactId>libmazinger-engine</artifactId>
			<version>${pom.version}</version>
			<type>inczip</type>
		</dependency>
	</dependencies>
</project>
