<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.soffid.iam.esso.${architecture}</groupId>
	<artifactId>sayaka-cp</artifactId>
	<packaging>${architecture.dll}</packaging>
	<name>Dll per a login amb targeta a windows vista i superior (64bits)</name>
	<parent>
		<groupId>com.soffid.iam.esso.pom</groupId>
		<artifactId>sayaka-cp</artifactId>
		<version>1.4.2</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-session</artifactId>
			<version>${pom.version}</version>
			<type>${architecture.lib}</type>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-session</artifactId>
			<version>${pom.version}</version>
			<type>inczip</type>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-engine</artifactId>
			<version>${pom.version}</version>
			<type>inczip</type>
		</dependency>
		<dependency>
			<groupId>com.mingw.${architecture}</groupId>
			<artifactId>libnetapi32</artifactId>
			<version>3.1</version>
			<type>a</type>
		</dependency>
		<dependency>
			<groupId>com.mingw.${architecture}</groupId>
			<artifactId>libsecur32</artifactId>
			<version>3.1</version>
			<type>a</type>
		</dependency>
		<dependency>
			<groupId>com.mingw.${architecture}</groupId>
			<artifactId>libwinscard</artifactId>
			<version>3.1</version>
			<type>a</type>
		</dependency>
		<dependency>
			<groupId>com.mingw.${architecture}</groupId>
			<artifactId>libcrypt32</artifactId>
			<version>3.1</version>
			<type>a</type>
		</dependency>
		<dependency>
			<groupId>com.mingw.${architecture}</groupId>
			<artifactId>libwinhttp</artifactId>
			<version>3.1</version>
			<type>a</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>compile</id>
						<phase>process-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<inherited>false</inherited>
						<configuration>
							<tasks>
								<mkdir dir="target/objs" />
								<exec executable="${gcc.prefix}-windres">
									<arg value="-i../src/main/resources/resources.rc" />
									<arg value="-otarget/objs/resources.o" />
								</exec>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>native-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<compilerProvider>generic</compilerProvider>
					<compilerExecutable>${gcc.prefix}-g++</compilerExecutable>
					<linkerProvider>generic</linkerProvider>
					<linkerExecutable>${gcc.prefix}-g++</linkerExecutable>
					<compilerMiddleOptions>
						<compilerMiddleOption>-Wall</compilerMiddleOption>
						<compilerMiddleOption>-g3</compilerMiddleOption>
						<compilerMiddleOption>-O0</compilerMiddleOption>
						<compilerMiddleOption>-D_WIN32_WINNT=0x0501</compilerMiddleOption>
						<compilerMiddleOption>-DSECURITY_WIN32</compilerMiddleOption>
						<compilerMiddleOption>-DWIN64</compilerMiddleOption>
					</compilerMiddleOptions>
					<linkerMiddleOptions>
						<linkerMiddleOption>-static-libgcc</linkerMiddleOption>
						<linkerMiddleOption>../src/main/def/exports64.def</linkerMiddleOption>
						<linkerMiddleOption>-s</linkerMiddleOption>
						<linkerMiddleOption>-Xlinker</linkerMiddleOption>
						<linkerMiddleOption>--strip-all</linkerMiddleOption>
						<linkerMiddleOption>-shared</linkerMiddleOption>
						<linkerMiddleOption>-Lsrc/main/lib-deps</linkerMiddleOption>
						<linkerMiddleOption>target/objs/resources.o</linkerMiddleOption>
						<linkerMiddleOption>-lmazinger-engine</linkerMiddleOption>
						<linkerMiddleOption>-lmazinger-session</linkerMiddleOption>
						<linkerMiddleOption>-shared</linkerMiddleOption>
						<linkerMiddleOption>-static-libgcc</linkerMiddleOption>
						<linkerMiddleOption>-static-libstdc++</linkerMiddleOption>
					</linkerMiddleOptions>
					<linkerEndOptions>
						<linkerEndOption>-lpcreposix</linkerEndOption>
						<linkerEndOption>-lgdi32</linkerEndOption>
						<linkerMiddleOption>-lole32</linkerMiddleOption>
						<linkerMiddleOption>-loleaut32</linkerMiddleOption>
						<linkerMiddleOption>-luuid</linkerMiddleOption>
						<linkerMiddleOption>-lnetapi32</linkerMiddleOption>
						<linkerMiddleOption>-lwsock32</linkerMiddleOption>
						<linkerMiddleOption>-lws2_32</linkerMiddleOption>
						<linkerMiddleOption>-lmpr</linkerMiddleOption>
						<linkerMiddleOption>-lsecur32</linkerMiddleOption>
						<linkerEndOption>-static</linkerEndOption>
					</linkerEndOptions>
					<sources>
						<source>
							<!-- relative to your project directory -->
							<directory>../src/main/native</directory>
							<includes>
								<include>**/*.cpp</include>
							</includes>
							<excludes>
								<exclude>**/*.h</exclude>
							</excludes>

							<deployable>false</deployable>
							<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
						</source>
						<!-- additional system include path -->
						<source>
							<directory>../src/main/include</directory>
							<deployable>true</deployable>
							<dependencyAnalysisParticipation>true</dependencyAnalysisParticipation>
						</source>
						<source>
							<directory>../src/main/include-deps</directory>
							<deployable>false</deployable>
							<dependencyAnalysisParticipation>true</dependencyAnalysisParticipation>
						</source>
						<source>
							<directory>../src/main/resources</directory>
							<dependencyAnalysisParticipation>true</dependencyAnalysisParticipation>
						</source>
					</sources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<architecture>w64</architecture>
		<architecture.lib>a</architecture.lib>
		<architecture.implib>dll</architecture.implib>
		<architecture.dll>dll</architecture.dll>
		<gcc.prefix>x86_64-w64-mingw32</gcc.prefix>
	</properties>
</project>
