<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.soffid.iam.esso.${architecture}</groupId>
	<artifactId>pam_sayaka</artifactId>
	<packaging>so</packaging>
	<name>Dll per a login amb targeta a linux 64 bits</name>
	<parent>
		<groupId>com.soffid.iam.esso.pom</groupId>
		<artifactId>pam_sayaka</artifactId>
		<version>3.0.0-SNAPSHOT</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>${architecture.libPrefix}MazingerHook</artifactId>
			<type>${architecture.dll}</type>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-session</artifactId>
			<type>${architecture.lib}</type>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-engine</artifactId>
			<type>inczip</type>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-session</artifactId>
			<type>inczip</type>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libpcreposix</artifactId>
			<type>inczip</type>
			<version>${pom.version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>native-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<compilerProvider>generic</compilerProvider>
					<compilerExecutable>g++</compilerExecutable>
					<linkerProvider>generic</linkerProvider>
					<linkerExecutable>g++</linkerExecutable>
					<compilerMiddleOptions>
						<compilerMiddleOption>-m${architecture.bits}</compilerMiddleOption>
						<compilerMiddleOption>-Wall</compilerMiddleOption>
						<compilerMiddleOption>-g3</compilerMiddleOption>
						<compilerMiddleOption>-O0</compilerMiddleOption>
						<compilerMiddleOption>-I/usr/include/PCSC</compilerMiddleOption>
						<compilerMiddleOption>-fPIC</compilerMiddleOption>
					</compilerMiddleOptions>
					<linkerMiddleOptions>
						<linkerMiddleOption>-m${architecture.bits}</linkerMiddleOption>
						<linkerMiddleOption>-Wl,--strip-all</linkerMiddleOption>
						<linkerMiddleOption>-shared</linkerMiddleOption>
						<linkerMiddleOption>-lMazingerHook</linkerMiddleOption>
						<linkerMiddleOption>-lmazinger-session</linkerMiddleOption>
						<linkerMiddleOption>-lmazinger-session</linkerMiddleOption>
						<linkerMiddleOption>-lsee</linkerMiddleOption>
						<linkerMiddleOption>-lpcreposix</linkerMiddleOption>
						<linkerMiddleOption>-lrt</linkerMiddleOption>
						<linkerMiddleOption>-ldl</linkerMiddleOption>
						<linkerMiddleOption>-lpcsclite</linkerMiddleOption>
						<linkerMiddleOption>-lssl</linkerMiddleOption>
						<linkerMiddleOption>-lcrypto</linkerMiddleOption>
						<linkerMiddleOption>-lsoup-2.4</linkerMiddleOption>
						<linkerMiddleOption>-lglib-2.0</linkerMiddleOption>
						<linkerMiddleOption>-lpam</linkerMiddleOption>
					</linkerMiddleOptions>
                                        <linkerEndOptions>
                                                <linkerEndOption>-Wl,-Map=target/${pom.artifactId}-${pom.version}.mapfile.txt</linkerEndOption>
                                        </linkerEndOptions>
					<sources>
						<source>
							<!-- relative to your project directory -->
							<directory>../src/main/native</directory>
							<includes>
								<include>**/*.cpp</include>
							</includes>
							<excludes>
								<exclude>**/*.h</exclude>
							</excludes>

							<deployable>false</deployable>
							<dependencyAnalysisParticipation>false
							</dependencyAnalysisParticipation>
						</source>
						<!-- additional system include path -->
						<source>
							<directory>../src/main/include</directory>
							<deployable>true</deployable>
							<dependencyAnalysisParticipation>true
							</dependencyAnalysisParticipation>
						</source>
						<source>
							<directory>../src/main/include-deps</directory>
							<dependencyAnalysisParticipation>false
							</dependencyAnalysisParticipation>
						</source>
					</sources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<architecture.bits>64</architecture.bits>
		<architecture>l64</architecture>
		<architecture.lib>a</architecture.lib>
		<architecture.implib>a</architecture.implib>
		<architecture.dll>so</architecture.dll>
		<architecture.libPrefix>lib</architecture.libPrefix>
		<MAZ_PLATFORM>l64</MAZ_PLATFORM>
	</properties>
</project>
