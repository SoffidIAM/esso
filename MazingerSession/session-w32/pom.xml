<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.soffid.iam.esso.${architecture}</groupId>
	<artifactId>libmazinger-session</artifactId>
	<packaging>${architecture.lib}</packaging>
	<name>Components per a la creaci√≥ de sesions a seycon (Windows 32bits)</name>
	<parent>
		<artifactId>libmazinger-session</artifactId>
		<groupId>com.soffid.iam.esso.pom</groupId>
		<version>1.5.7-enterprise</version>
	</parent>
	<dependencies>
	  	<dependency>
	  		<groupId>com.soffid.iam.esso.${architecture}</groupId>
	  		<artifactId>${architecture.libPrefix}MazingerHook</artifactId>
	  		<type>inczip</type>
			<version>${pom.version}</version>
	  	</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-engine</artifactId>
			<type>inczip</type>
			<version>${pom.version}</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>native-maven-plugin</artifactId>
						<extensions>true</extensions>
						<configuration>
							<compilerProvider>generic</compilerProvider>
							<compilerExecutable>${cpp.32w}</compilerExecutable>
							<compilerMiddleOptions>
								<compilerMiddleOption>-Wall</compilerMiddleOption>
								<compilerMiddleOption>-g3</compilerMiddleOption>
								<compilerMiddleOption>-O0</compilerMiddleOption>
								<compilerMiddleOption>-D_WIN32_WINNT=0x0502</compilerMiddleOption>
							</compilerMiddleOptions>
							<linkerProvider>ar</linkerProvider>
							<linkerExecutable>${ar.32w}</linkerExecutable>
							<linkerStartOptions>
								<linkerStartOption>-s</linkerStartOption>
								<linkerStartOption>-r</linkerStartOption>
							</linkerStartOptions>
							<sources>
								<source>
									<!-- relative to your project directory -->
									<directory>../src/main/native</directory>
									<includes>
										<include>**/*.cpp</include>
									</includes>
									<excludes>
										<exclude>**/*.h</exclude>
									</excludes>

									<deployable>false</deployable>
									<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
								</source>
								<!-- additional system include path -->
								<source>
									<directory>../src/main/include</directory>
									<deployable>true</deployable>
									<dependencyAnalysisParticipation>true</dependencyAnalysisParticipation>
								</source>
								<source>
									<directory>../src/main/include-deps</directory>
									<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
								</source>
							</sources>
						</configuration>
					</plugin>
				</plugins>
			</build>
			<properties>
				<architecture>w32</architecture>
				<architecture.lib>a</architecture.lib>
				<architecture.libPrefix />
			</properties>
</project>
