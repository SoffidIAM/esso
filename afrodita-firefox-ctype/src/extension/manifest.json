{
   "background": {
      "persistent": true,
      "scripts": [ "background.js" ]
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
   },
   "content_scripts": [ {
      "all_frames": true,
      "js": [ "content.js" ],
      "matches": [ "*://*/*" ]
   } ],
   "description": "Soffid Enterprise Single Sign-On extension (version 2.5)",
   "icons": {
      "128": "soffid.png",
      "32": "icon.png"
   },
   "manifest_version": 2,
   "name": "Soffid ESSO v2.5",
   "permissions": [ "*://*/", "tabs" ],
   "version": "2.5.0.0",
   "applications" : {
   		"gecko": {
   			"id": "esso@soffid.com",
   			"strict_min_version": "42a1",
   			"strict_max_version": "*",
   			"update_url": "https://soffid.com/esso/updates.json"
   		}
   	}
}
