<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.soffid.iam.esso.${architecture}</groupId>
	<artifactId>${architecture.libPrefix}afrodita-firefox-ctype</artifactId>
	<packaging>${architecture.dll}</packaging>
	<name>Dll per a injecci√≥ d'Usuaris i Passwords al Firefox (Linux 64 bits)</name>
	<parent>
		<artifactId>afrodita-firefox-ctype</artifactId>
		<groupId>com.soffid.iam.esso</groupId>
		<version>1.6.9-enterprise-SNAPSHOT</version>
	</parent>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<preparationGoals>clean verify</preparationGoals>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>native-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<compilerProvider>generic</compilerProvider>
					<compilerExecutable>g++</compilerExecutable>
					<linkerProvider>generic</linkerProvider>
					<linkerExecutable>g++</linkerExecutable>
					<compilerMiddleOptions>
						<compilerMiddleOption>-m64</compilerMiddleOption>
						<compilerMiddleOption>-fPIC</compilerMiddleOption>
						<compilerMiddleOption>-Wall</compilerMiddleOption>
						<compilerMiddleOption>-g3</compilerMiddleOption>
						<compilerMiddleOption>-O0</compilerMiddleOption>
						<compilerMiddleOption>-DVERSION="${pom.version}"</compilerMiddleOption>
					</compilerMiddleOptions>
					<linkerMiddleOptions>
						<linkerMiddleOption>-m64</linkerMiddleOption>
						<linkerMiddleOption>-Wl,-s</linkerMiddleOption>
						<linkerMiddleOption>-Wl,--exclude-libs=ALL</linkerMiddleOption>
						<linkerMiddleOption>-Lsrc/lib/</linkerMiddleOption>
						<linkerMiddleOption>-shared</linkerMiddleOption>
						<linkerMiddleOption>-lrt</linkerMiddleOption>
						<linkerMiddleOption>-lX11</linkerMiddleOption>
					</linkerMiddleOptions>
					<linkerEndOptions>
						<linkerEndOption>-lsee</linkerEndOption>
						<linkerEndOption>-lpcreposix</linkerEndOption>
						<linkerEndOption>-lsoup-2.4</linkerEndOption>
						<linkerEndOption>-lglib-2.0</linkerEndOption>
						<linkerEndOption>-lpthread</linkerEndOption>
					</linkerEndOptions>
					<sources>
						<source>
							<!-- relative to your project directory -->
							<directory>../src/main/native</directory>
							<includes>
								<include>**/*.cpp</include>
							</includes>
							<excludes>
								<exclude>**/*.h</exclude>
							</excludes>

							<deployable>false</deployable>
							<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
						</source>
						<!-- additional system include path -->
						<source>
							<directory>../src/main/include</directory>
							<deployable>true</deployable>
							<dependencyAnalysisParticipation>true</dependencyAnalysisParticipation>
						</source>
					</sources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-engine</artifactId>
			<version>${pom.version}</version>
			<type>inczip</type>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libmazinger-engine</artifactId>
			<version>${pom.version}</version>
			<type>${architecture.lib}</type>
		</dependency>
	</dependencies>
	<properties>
		<architecture>l64</architecture>
		<architecture.lib>a</architecture.lib>
		<architecture.dll>so</architecture.dll>
		<architecture.implib>so</architecture.implib>
		<architecture.exe>uexe</architecture.exe>
		<architecture.libPrefix>lib</architecture.libPrefix>
	</properties>
</project>
