<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.soffid.iam.esso.${architecture}</groupId>
	<artifactId>libMazingerPreload</artifactId>
	<packaging>so</packaging>
	<name>Llibreria precarregada per a injecci√≥ d'Usuaris i Passwords a Linux 32 bits</name>
	<parent>
		<groupId>com.soffid.iam.esso.pom</groupId>
		<artifactId>libMazingerPreload</artifactId>
		<version>1.6.2-enterprise</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>com.soffid.iam.esso.${architecture}</groupId>
			<artifactId>libMazingerHook</artifactId>
			<version>${pom.version}</version>
			<type>inczip</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>native-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<compilerProvider>generic</compilerProvider>
					<compilerExecutable>g++</compilerExecutable>
					<linkerProvider>generic</linkerProvider>
					<linkerExecutable>g++</linkerExecutable>
					<compilerMiddleOptions>
						<compilerMiddleOption>-m${architecture.bits}</compilerMiddleOption>
						<compilerMiddleOption>-Wall</compilerMiddleOption>
						<compilerMiddleOption>-g3</compilerMiddleOption>
						<compilerMiddleOption>-O0</compilerMiddleOption>
						<compilerMiddleOption>-fPIC</compilerMiddleOption>
					</compilerMiddleOptions>
					<linkerMiddleOptions>
						<linkerMiddleOption>-m${architecture.bits}</linkerMiddleOption>
						<linkerMiddleOption>-s</linkerMiddleOption>
						<linkerMiddleOption>-Wl,--exclude-libs=ALL</linkerMiddleOption>
						<linkerMiddleOption>-s</linkerMiddleOption>
						<linkerMiddleOption>-shared</linkerMiddleOption>
						<linkerMiddleOption>-ldl</linkerMiddleOption>
						<linkerMiddleOption>-lpthread</linkerMiddleOption>
						<linkerMiddleOption>-lX11</linkerMiddleOption>
					</linkerMiddleOptions>
					<sources>
						<source>
							<!-- relative to your project directory -->
							<directory>../src/main/native</directory>
							<includes>
								<include>**/*.cpp</include>
							</includes>
							<excludes>
								<exclude>win/*.cpp</exclude>
								<exclude>**/*.h</exclude>
							</excludes>

							<deployable>false</deployable>
							<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
						</source>
					</sources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<architecture.bits>32</architecture.bits>
		<architecture>l${architecture.bits}</architecture>
		<architecture.lib>a</architecture.lib>
		<architecture.dll>so</architecture.dll>
		<architecture.prefix>lib</architecture.prefix>
	</properties>
</project>
