<?xml version="1.0" encoding ="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.soffid.iam.esso.l32</groupId>
	<artifactId>libmazinger-engine</artifactId>
	<packaging>a</packaging>
	<name>Codi comú per a injecció d'Usuaris i Passwords (Linux 32 bits)</name>
	<parent>
		<artifactId>libmazinger-engine</artifactId>
		<groupId>com.soffid.iam.esso.pom</groupId>
		<version>1.6.0-enterprise-beta-10</version>
	</parent>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<configuration>
					<preparationGoals>clean verify</preparationGoals>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>native-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<compilerProvider>generic</compilerProvider>
					<compilerExecutable>g++</compilerExecutable>
					<compilerMiddleOptions>
						<compilerMiddleOption>-m32</compilerMiddleOption>
						<compilerMiddleOption>-Wall</compilerMiddleOption>
						<compilerMiddleOption>-g3</compilerMiddleOption>
						<compilerMiddleOption>-O0</compilerMiddleOption>
						<compilerMiddleOption>-I/usr/include/libsoup-2.4</compilerMiddleOption>
						<compilerMiddleOption>-I/usr/include/glib-2.0</compilerMiddleOption>
						<compilerMiddleOption>-I/usr/lib/glib-2.0/include</compilerMiddleOption>
					</compilerMiddleOptions>
					<linkerProvider>ar</linkerProvider>
					<linkerExecutable>ar</linkerExecutable>
					<linkerStartOptions>
						<linkerStartOption>-s</linkerStartOption>
						<linkerStartOption>-r</linkerStartOption>
					</linkerStartOptions>
					<sources>
						<source>
							<!-- relative to your project directory -->
							<directory>../src/main/native</directory>
							<includes>
								<include>**/*.cpp</include>
							</includes>
							<excludes>
								<exclude>**/*.h</exclude>
							</excludes>

							<deployable>false</deployable>
							<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
						</source>
						<!-- additional system include path -->
						<source>
							<directory>../src/main/include</directory>
							<deployable>true</deployable>
							<dependencyAnalysisParticipation>true</dependencyAnalysisParticipation>
						</source>
						<source>
							<directory>../src/main/include-deps</directory>
							<dependencyAnalysisParticipation>false</dependencyAnalysisParticipation>
						</source>
					</sources>
				</configuration>
			</plugin>
			<plugin>
				  <groupId>org.codehaus.mojo</groupId>          
				  <artifactId>exec-maven-plugin</artifactId>
	        	</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.soffid.iam.esso.l32</groupId>
			<artifactId>libpcreposix</artifactId>
			<version>${pom.version}</version>
			<type>inczip</type>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.l32</groupId>
			<artifactId>libsee</artifactId>
			<version>${pom.version}</version>
			<type>inczip</type>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.l32</groupId>
			<artifactId>libpcreposix</artifactId>
			<version>${pom.version}</version>
			<type>a</type>
		</dependency>
		<dependency>
			<groupId>com.soffid.iam.esso.l32</groupId>
			<artifactId>libsee</artifactId>
			<version>${pom.version}</version>
			<type>a</type>
		</dependency>
	</dependencies>
</project>
